{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "paths": {
      "@themost/d/core": ["core"],
      "@themost/d/core/*": ["core/*"],
      "@themost/d/platform-browser": ["platform-browser"],
      "@themost/d/platform-browser/*": ["platform-browser/*"]
    }
  },
  "exclude": ["node_modules"]
}
