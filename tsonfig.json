{
  "compilerOptions": {
    "declaration": false,
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": [
        "es2015",
        "es2016",
        "es2017",
        "dom"
        ],
    "paths": {
        "@themost/d/core": "src/core",
        "@themost/d/platform-browser": "src/platform-browser"
    }
  },
  "exclude": [
      "node_modules"
      ]
}
